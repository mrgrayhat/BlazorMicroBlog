{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Information"
      //"Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Blog": {
    "ConnectionString": "Data Source=MicroBlog.db",
    "UseInMemory": "false",
    "UseSqLite": "true"
  },
  "JWTSettings": {
    "securityKey": "MicroBlogSecretKey",
    "validIssuer": "MicroBlogAPI",
    "validAudience": "https://localhost:5001",
    "expiryInMinutes": 10
  },
  "IdentityOptions": {
    "HighPasswordComplexity": false,
    "RequireUniqueEmail": true,
    "LockoutEnabled": true,
    "MaxFailedAccessAttempts": 5,
    "LockoutTimeSpan": 1
  }
}
